<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/adminTbody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#EEEEEE"
            android:padding="8dp">

            <TextView
                android:id="@+id/contentid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/addr1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/eventstartdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/eventenddate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/questioncount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textAlignment="center"/>

            <android.widget.Button
                android:id="@+id/deleteClickBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notobold"
                android:textColor="#ff4949"
                android:background="@drawable/festival_negative_btn"
                android:onClick="deleteClick"
                android:text="삭제"
                android:textSize="12sp"
                android:textAlignment="center"
                android:padding="0dp" />


        </TableRow>
    </TableLayout>
</LinearLayout>